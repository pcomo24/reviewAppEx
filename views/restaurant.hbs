<html>
    <body>
        <h1>{{restaurant.restaurant_name}}</h1>
        <p>Address: {{restaurant.address}}</p>
        <p>Category: {{restaurant.category}}</p>
        <br><br>
        {{#if reviews}}
            <h2>Reviews</h2>
            {{#each reviews}}
                <h3>{{title}}</h3>
                <h4>Author: {{reviewer_name}}</h4>
                <h5>Stars: {{stars}}</h5>
                <p>{{review}}</p>
            {{/each}}
        {{/if}}
        <h2>Submit a review</h2>
        <form method="post" action="/add_review/{{restaurant.id}}">
            <label>Title: </label>
            <input type="text" name="title"><br>
            <label>Stars: </label>
            <input type="radio" name="stars" value="1">1
            <input type="radio" name="stars" value="2">2
            <input type="radio" name="stars" value="3">3
            <input type="radio" name="stars" value="4">4
            <input type="radio" name="stars" value="5">5<br>
            <label>Review: </label><br>
            <textarea name="review" rows="7" cols="40"></textarea><br>
            <button type="submit">Send Review</button>
        </form>
    </body>
</html>